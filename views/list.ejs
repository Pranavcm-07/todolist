<%- include('header') -%>

    <div class="box" id="heading">
        <h1> <%= day %></h1>
    </div>

    <div class="box">
        <% newitemlist.forEach(element => {%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=element._id %>" onchange="this.form.submit()">
                    <p><%= element.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%=day %>"></input>
            </form>
        <%}); %>
        <form class="item" action="/" method="post">
            <input type="text" name="newitem" placeholder="New Item">
            <button type="submit" name="list" value=<%= day %>>+</button>
        </form>
    </div>
<%- include('footer') -%>